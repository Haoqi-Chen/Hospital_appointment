.Input {
  margin-top: 15px;
  margin-left: 10px;
  margin-right: 10px;
  height: 50px;

  justify-content: flex-start;
  display: flex;
  align-items: center;
}

.input-content {
  width: 500rpx;
  height: 25px;
  border: 0px solid black;
  border-radius: 5px;
  /*设置边框及圆角，但其实没有黑色边框，线条宽度设置成了0*/
  margin-left: 45px;
  /* 输入框对齐，调整margin-left */
  background-color: white;
}

.input-content2 {
  /* 专门针对身份证号 */
  width: 500rpx;
  height: 25px;
  border: 0px solid black;
  border-radius: 5px;
  /*设置边框及圆角*/
  background-color: white;
  margin-left: 13px;
}

.radiogroup {
